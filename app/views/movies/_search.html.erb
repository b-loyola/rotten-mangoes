<%= form_tag movies_path, method: 'get' do %>
  <%= fields_for :movie do |f| %>
    <div>
    	<%= f.text_field :query, value: (params[:movie][:query] if params[:movie]), placeholder: "Search..." %>
    </div>
    <div>
    	<%= f.select :runtime_in_minutes, options_for_select(
    		[
    			["Any runtime", "0"],
    			["90 minutes and under", "0-90"],
    			["Over 90 and up to 120 minutes", "90-120"],
    			["Over 120 minutes", "120"]
    		]
    	) %>
    </div>
  <% end %>
  <div>
  	<%= submit_tag "Search" %> 
  </div>
<% end %>
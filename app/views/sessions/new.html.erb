<%= form_tag session_path, class: "form-signin" do %>
	<h2 class="form-signin-heading">Log In</h2>

	<div class="user-forms">
	  <%= label_tag :email, nil, class: "sr-only"%>
	  <%= text_field_tag :email, nil, placeholder: "e-mail address", class: "form-control" %>

	  <%= label_tag :password, nil, class: "sr-only"%>
	  <%= password_field_tag :password, nil, placeholder: "password", class: "form-control" %>
	</div>
	
  <div class="spacer"></div>
  <%= submit_tag "Log In", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
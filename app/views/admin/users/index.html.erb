<div class="page-header">
	<h1>Users</h1>
</div>

<%= paginate @users %>

<div class="col-md-12">
	<table class="table">
		<tr>
			<th>Full Name</th>
			<th>Signed Up</th>
			<th>Email</th>
			<th>Delete</th>
		</tr>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.full_name %></td>
				<td><%= formatted_date(user.created_at) %></td>
				<td><%= user.email %></td>
				<td><%= link_to "delete", admin_user_path(user), method: :delete, data: {confirm: "You sure?"} %></td>
			</tr>
		<% end %>
	</table>
</div>